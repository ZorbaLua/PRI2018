extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-teal
        h3 Upload de Ficheiros
      .w3-container
          //- form.w3-container(action='/guardar', method='POST', enctype='multipart/form-data')
          form.w3-container()
            label.w3-text-teal
              b Ficheiro
              input.w3-input.w3-border.w3-light-grey(id='fil' type='file')
              label.w3-text-teal
                b Descrição
                  input.w3-input.w3-border.w3-light-grey(id='texto')
                  input.w3-btn.w3-blue-grey(id='adic', value='Enviar')
      .w3-container
        ol(id='ficheiros')
      footer.w3-container.w3-teal
        address Gerado por AjaxApp
  